/* 页面容器 */
.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #888;
}

/* 上传区域 */
.upload-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
  text-align: center;
}

.upload-btn {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.upload-btn::after {
  border: none;
}

.upload-icon {
  font-size: 36rpx;
}

.upload-text {
  font-size: 30rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

/* 乐谱列表区域 */
.scores-section {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.section-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.score-count {
  font-size: 24rpx;
  color: #888;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 24rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #888;
  line-height: 1.5;
}

/* 乐谱列表 */
.scores-list {
  padding: 0;
}

.score-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.score-item:last-child {
  border-bottom: none;
}

.score-item:active {
  background-color: #f8f8f8;
}

.score-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-icon {
  font-size: 40rpx;
  color: #666;
}

.score-info {
  flex: 1;
}

.score-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score-meta {
  display: flex;
  gap: 16rpx;
}

.score-size, .score-date {
  font-size: 24rpx;
  color: #888;
}

.score-actions {
  margin-left: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.action-btn:active {
  background: #e5e5e5;
}

.action-icon {
  font-size: 28rpx;
}

/* 上传进度显示 */
.upload-progress-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.upload-progress-content {
  padding: 20rpx;
}

.upload-progress-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.upload-progress-bar-container {
  height: 10rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 10rpx 0;
}

.upload-progress-bar {
  height: 100%;
  background-color: #07c160;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.upload-progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}
