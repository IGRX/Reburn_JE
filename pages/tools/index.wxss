/* 工具页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 工具网格布局 */
.tools-grid {
  display: flex;
  gap: 20rpx;
  justify-content: space-between;
}

.tools-column {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 工具项样式 */
.tool-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.tool-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.tool-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.tool-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  display: block;
}

.tool-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 特殊工具项样式 */
.tool-item[data-tool="more"] {
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border: 2rpx dashed #ccc;
}

.tool-item[data-tool="more"] .tool-icon {
  opacity: 0.6;
}

.tool-item[data-tool="more"] .tool-name,
.tool-item[data-tool="more"] .tool-desc {
  color: #999;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .tools-grid {
    flex-direction: column;
  }
  
  .tools-column {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .tool-item {
    flex: 1;
    min-width: 200rpx;
  }
}
