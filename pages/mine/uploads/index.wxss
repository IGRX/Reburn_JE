/* 页面容器 */
.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

/* 页面头部 */
.header {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #888;
}

/* 上传区域 */
.upload-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
  text-align: center;
}

.upload-btn {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.upload-btn::after {
  border: none;
}

.upload-icon {
  font-size: 36rpx;
}

.upload-text {
  font-size: 30rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 16rpx;
}

/* 乐谱列表区域 */
.scores-section {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.section-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.score-count {
  font-size: 24rpx;
  color: #888;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 24rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #888;
  line-height: 1.5;
}

/* 乐谱列表 */
.scores-list {
  padding: 0;
}

.score-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.score-item:last-child {
  border-bottom: none;
}

.score-item:active {
  background-color: #f8f8f8;
}

.score-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.preview-icon {
  font-size: 40rpx;
  color: #666;
}

.score-info {
  flex: 1;
}

.score-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.score-meta {
  display: flex;
  gap: 16rpx;
}

.score-size, .score-date {
  font-size: 24rpx;
  color: #888;
}

.score-actions {
  margin-left: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.action-btn:active {
  background: #e5e5e5;
}

.action-icon {
  font-size: 28rpx;
}

/* 上传进度弹窗 */
.upload-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 0 40rpx;
  min-width: 500rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

.progress-info {
  text-align: center;
}

.progress-text {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007aff, #5856d6);
  transition: width 0.3s;
}

/* 预览弹窗 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.preview-content {
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.preview-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
  margin-right: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.preview-body {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.preview-image-full {
  width: 100%;
  max-width: 100%;
}

.preview-pdf {
  text-align: center;
  padding: 60rpx 0;
}

.pdf-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.pdf-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.pdf-desc {
  font-size: 26rpx;
  color: #888;
}

.preview-actions {
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 16rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.download-btn {
  background: #007aff;
  color: #fff;
  border: none;
}

.delete-btn {
  background: #ff3b30;
  color: #fff;
  border: none;
}

.action-button::after {
  border: none;
}
