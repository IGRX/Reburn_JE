/* 转调器页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 调性选择区域 */
.key-selection {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.key-row {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.key-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.key-picker {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
  min-width: 120rpx;
  justify-content: space-between;
}

.key-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.key-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 10rpx;
}

.key-arrow-icon {
  font-size: 40rpx;
  color: #667eea;
  margin: 0 20rpx;
  font-weight: bold;
}

/* 输入输出区域 */
.input-section, .output-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.input-actions, .output-actions {
  display: flex;
  gap: 10rpx;
}

.action-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 6rpx;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}

.action-btn:active {
  background: #e0e0e0;
}

/* 输入框 */
.input-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background: #fafafa;
  box-sizing: border-box;
}

.input-textarea:focus {
  border-color: #667eea;
  background: white;
}

.input-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 转换按钮 */
.convert-section {
  text-align: center;
  margin: 40rpx 0;
}

.convert-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.convert-btn.active:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

.convert-btn.disabled {
  background: #ccc;
  box-shadow: none;
  color: #999;
}

.btn-icon {
  font-size: 28rpx;
}

.btn-text {
  font-size: 32rpx;
}

/* 输出区域 */
.output-content {
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background: #fafafa;
}

.output-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
}

/* 使用说明 */
.help-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.help-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.help-content {
  font-size: 26rpx;
  line-height: 1.6;
  color: #666;
}

.help-item {
  margin-bottom: 8rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .key-selection {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .key-arrow-icon {
    transform: rotate(90deg);
    margin: 10rpx 0;
  }
}
