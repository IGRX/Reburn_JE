/* 页面容器 */
.container {
  padding: 24rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.header {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #888;
}

/* 文件选择器 */
.file-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.file-header {
  margin-bottom: 20rpx;
}

.file-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

/* 文件选择按钮 */
.file-selector {
  text-align: center;
}

.select-file-btn {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.select-file-btn::after {
  border: none;
}

.btn-icon {
  font-size: 36rpx;
}

.btn-text {
  font-size: 30rpx;
}

.file-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-limit, .file-formats {
  font-size: 24rpx;
  color: #999;
}

/* 已选择文件 */
.file-preview {
  margin-top: 20rpx;
}

.file-info-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  overflow: hidden;
}

.file-thumbnail {
  width: 100%;
  height: 100%;
}

.file-icon-placeholder {
  font-size: 40rpx;
  color: #666;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-meta {
  display: flex;
  gap: 16rpx;
}

.file-size, .file-type {
  font-size: 24rpx;
  color: #888;
}

.file-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 16rpx;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.action-btn:active {
  background: #e5e5e5;
}

.action-icon {
  font-size: 28rpx;
}

/* 元数据表单 */
.metadata-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

/* 作者输入相关样式 */
.authors-container {
  width: 100%;
}

.authors-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.author-tag {
  display: flex;
  align-items: center;
  background-color: #e8f0fe;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #1a73e8;
}

.delete-author {
  margin-left: 8rpx;
  font-size: 28rpx;
  color: #5f6368;
  padding: 0 4rpx;
}

.delete-author:active {
  color: #d93025;
}

.form-input.has-authors {
  margin-top: 16rpx;
}

.form-input:focus {
  border-color: #007aff;
  background: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background: #fafafa;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #007aff;
  background: #fff;
}

/* 封面选择 */
.cover-section {
  margin-top: 12rpx;
}

.cover-placeholder {
  width: 200rpx;
  height: 150rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fafafa;
  transition: all 0.2s;
}

.cover-placeholder:active {
  background: #f0f0f0;
  border-color: #007aff;
}

.cover-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.cover-text {
  font-size: 24rpx;
  color: #666;
}

.cover-preview {
  width: 200rpx;
  height: 150rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s;
}

.cover-preview:active .cover-overlay {
  opacity: 1;
}

.cover-change-text {
  color: #fff;
  font-size: 24rpx;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 24rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 16rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.action-btn::after {
  border: none;
}

.preview-btn {
  background: #f0f0f0;
  color: #666;
}

.preview-btn:not([disabled]) {
  background: linear-gradient(135deg, #34c759, #30d158);
  color: #fff;
}

.save-btn {
  background: #f0f0f0;
  color: #666;
}

.save-btn:not([disabled]) {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: #fff;
}

/* 预览弹窗 */
.preview-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.preview-content {
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.preview-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.preview-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
}

.preview-body {
  flex: 1;
  overflow: auto;
  padding: 24rpx;
}

.preview-image-full {
  width: 100%;
  max-width: 100%;
}

.preview-pdf {
  text-align: center;
  padding: 60rpx 0;
}

.pdf-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.pdf-text {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.pdf-desc {
  font-size: 26rpx;
  color: #888;
}

/* 完整预览 */
.preview-meta {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.preview-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 120rpx;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.preview-content-file {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  border-left: 4rpx solid #007aff;
}
