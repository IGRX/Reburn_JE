/* 谱库页面样式 */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面标题 */
.tab-page-title {
  background: linear-gradient(135deg, #007aff, #5856d6);
  color: white;
  text-align: center;
  padding: 20rpx 0;
  font-size: 36rpx;
  font-weight: bold;
}

/* 广告栏样式 */
.banner-container {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.15);
}

.banner-swiper {
  height: 200rpx;
}

.banner-item {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  position: relative;
}

.banner-content {
  flex: 1;
}

.banner-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.banner-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

.banner-icon {
  font-size: 60rpx;
  opacity: 0.8;
}

/* 搜索区域样式 */
.search-container {
  background: white;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-type-tabs {
  display: flex;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
  margin-bottom: 20rpx;
}

.search-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.search-tab.active {
  background: #007aff;
  color: white;
  font-weight: bold;
}

.search-input-container {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.search-input {
  flex: 1;
  padding: 24rpx 0;
  font-size: 28rpx;
  background: transparent;
}

.search-btn {
  padding: 12rpx;
  margin-left: 12rpx;
}

.search-icon {
  font-size: 32rpx;
  color: #007aff;
}

/* 乐谱列表样式 */
.scores-container {
  margin: 0 20rpx 20rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #666;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

.scores-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.score-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.score-item:last-child {
  border-bottom: none;
}

.score-item:active {
  background-color: #f8f9fa;
}

.score-main {
  flex: 1;
}

.score-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.score-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-bottom: 8rpx;
}

.score-author,
.score-album {
  font-size: 26rpx;
  color: #666;
  line-height: 1.3;
}

.score-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.score-uploader,
.score-date,
.score-type {
  font-size: 24rpx;
  color: #999;
}

.score-type {
  background: #007aff;
  color: white;
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  text-align: center;
}

.score-arrow {
  font-size: 36rpx;
  color: #ccc;
  margin-left: 16rpx;
}