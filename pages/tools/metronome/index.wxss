/* 页面容器 */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* BPM控制区域 */
.bpm-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.bpm-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.bpm-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #007AFF;
  line-height: 1;
}

.bpm-label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

.bpm-slider-container {
  position: relative;
}

.bpm-range {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.range-label {
  font-size: 24rpx;
  color: #999;
}

.bpm-slider {
  width: 100%;
}

/* 节拍器主体 */
.metronome-main {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
}

.metronome-circle {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007AFF, #5AC8FA);
  margin: 0 auto 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.1s ease;
}

.metronome-circle.beat-animation {
  transform: scale(1.1);
  box-shadow: 0 0 30rpx rgba(0, 122, 255, 0.5);
}

.beat-indicator {
  text-align: center;
  color: white;
}

.beat-number {
  font-size: 80rpx;
  font-weight: bold;
  line-height: 1;
}

.beat-total {
  font-size: 32rpx;
  opacity: 0.8;
  margin-top: 10rpx;
}

/* 播放控制 */
.play-controls {
  margin-top: 40rpx;
}

.play-button {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #34C759, #30D158);
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(52, 199, 89, 0.3);
  transition: all 0.2s ease;
}

.play-button.playing {
  background: linear-gradient(135deg, #FF3B30, #FF6B6B);
  box-shadow: 0 8rpx 20rpx rgba(255, 59, 48, 0.3);
}

.play-button:active {
  transform: scale(0.95);
}

.button-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.button-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 设置区域 */
.settings-section {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 拍数选择器 */
.beats-selector {
  display: flex;
  gap: 20rpx;
}

.beat-option {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  transition: all 0.2s ease;
}

.beat-option.active {
  background: #007AFF;
  color: white;
}

.beat-option:active {
  transform: scale(0.95);
}

/* 音效开关 */
.sound-switch {
  transform: scale(1.2);
}

/* 重置按钮 */
.reset-button {
  width: 100%;
  height: 80rpx;
  background: #f0f0f0;
  border: none;
  border-radius: 40rpx;
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.reset-button:active {
  background: #e0e0e0;
  transform: scale(0.98);
}

/* 动画效果 */
@keyframes beatPulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

.beat-animation {
  animation: beatPulse 0.1s ease-in-out;
}
